{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="work page-width section-{{ section.id }}-padding">
  <h1 class="title--primary scroll-trigger animate--fade-in">
    Portfolio
  </h1>
  <div class="blog-articles">
    <div
      class="blog-articles__article article scroll-trigger animate--slide-in"
      data-cascade=""
      style="--animation-order: 1;"
      bis_skin_checked="1">
      <div class="article-card-wrapper card-wrapper underline-links-hover" bis_skin_checked="1">

        <div
          class="
          card article-card
          card--card
          article-card__image--medium
          card--media
          color-background-1 gradient
        "
          style="--ratio-percent: 56.26666666666666%;"
          bis_skin_checked="1">
          <div
            class="card__inner ratio"
            style="--ratio-percent: 56.26666666666666%;"
            bis_skin_checked="1">
            <div class="article-card__image-wrapper card__media" bis_skin_checked="1">
              <div class="article-card__image media media--hover-effect" bis_skin_checked="1">
                <img
                  src="{{ 'Maison-Lprn.png' |  file_img_url }}"
                  alt="Canada's Shopify Store for Buying and Renting Dresses"
                  class="motion-reduce"
                  {% unless lazy_load == false %}
                    loading="lazy"
                  {% endunless %}
                  width="1860"
                  height="901"
                >
              </div>
            </div>
            <div class="card__content" bis_skin_checked="1">
              <div class="card__information" bis_skin_checked="1">
                <h3 class="card__heading h2">
                  <a href="https://maisonlprn.com" class="full-unstyled-link" target="_blank" rel="noopener">
                    Canada's Shopify Store for Buying and Renting Dresses
                  </a>
                </h3>
                <div class="article-card__info caption-with-letter-spacing h5" bis_skin_checked="1">
                  <span class="circle-divider">Dec, 2022</span>
                </div>
                <p class="article-card__excerpt rte-width">New Design and Functionality implementation for Boosting Sales for Canadian Dress Store, using such technologies as HTML5, CSS, JavaScript, Liquid and Shopify apps customization.
                </p>
                <div class="article-card__footer" bis_skin_checked="1"></div>
              </div>
            </div>
          </div>
          <div class="card__content" bis_skin_checked="1">
            <div class="card__information" bis_skin_checked="1">
              <h3 class="card__heading h2">
                <a href="https://maisonlprn.com" class="full-unstyled-link" target="_blank" rel="noopener">
                  Canada's Shopify Store for Buying and Renting Dresses
                </a>
              </h3>
              <div class="article-card__info caption-with-letter-spacing h5" bis_skin_checked="1">
                <span class="circle-divider">Dec, 2022</span>
              </div>
              <p class="article-card__excerpt rte-width">New Design and Functionality implementation for Boosting Sales for Canadian Dress Store, using such technologies as HTML5, CSS, JavaScript, Liquid and Shopify apps customization.
              </p>
              <div class="article-card__footer" bis_skin_checked="1"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div
      class="blog-articles__article article scroll-trigger animate--slide-in"
      data-cascade=""
      style="--animation-order: 1;"
      bis_skin_checked="1">
      <div class="article-card-wrapper card-wrapper underline-links-hover" bis_skin_checked="1">

        <div
          class="
          card article-card
          card--card
          article-card__image--medium
          card--media
          color-background-1 gradient
        "
          style="--ratio-percent: 56.26666666666666%;"
          bis_skin_checked="1">
          <div
            class="card__inner ratio"
            style="--ratio-percent: 56.26666666666666%;"
            bis_skin_checked="1">
            <div class="article-card__image-wrapper card__media" bis_skin_checked="1">
              <div class="article-card__image media media--hover-effect" bis_skin_checked="1">
                <img
                  src="{{ 'Careers-Fable-Home.png' |  file_img_url }}"
                  alt="Canada's Shopify Store for Buying and Renting Dresses"
                  class="motion-reduce"
                  {% unless lazy_load == false %}
                    loading="lazy"
                  {% endunless %}
                  width="1824"
                  height="733"
                >
              </div>
            </div>
            <div class="card__content" bis_skin_checked="1">
              <div class="card__information" bis_skin_checked="1">
                <h3 class="card__heading h2">
                  <a href="https://fable.com" class="full-unstyled-link" target="_blank" rel="noopener">
                    Canadian Multimarket Store for Tableware and Dinnerware
                  </a>
                </h3>
                <div class="article-card__info caption-with-letter-spacing h5" bis_skin_checked="1">
                  <span class="circle-divider">Aug, 2022</span>
                </div>
                <p class="article-card__excerpt rte-width">New Pages and Promotions Landing Pages development for Marketing campaigns for Shopify Plus international store, using such technologies as HTML5, SCSS (with Tailwind library), JavaScript and Liquid.
                </p>
                <div class="article-card__footer" bis_skin_checked="1"></div>
              </div>
